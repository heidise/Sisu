<VBox alignment="CENTER" maxHeight="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.tuni.prog3.sisu.LoginController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <AnchorPane prefHeight="220.0" prefWidth="360.0">
               <children>
                  <Label layoutX="51.0" layoutY="58.0" prefHeight="28.0" prefWidth="60.0" text="Name:" />
                  <TextField fx:id="inputName" layoutX="137.0" layoutY="61.0" onKeyTyped="#input" />
                  <PasswordField fx:id="inputPassword" layoutX="137.0" layoutY="101.0" onKeyTyped="#input" />
                  <Label layoutX="54.0" layoutY="200.0" prefHeight="15.0" prefWidth="110.0" text="No account yet?" />
                  <Label layoutX="49.0" layoutY="96.0" prefHeight="33.0" prefWidth="60.0" text="Password:" />
                  <Button fx:id="loginBtn_cancel" contentDisplay="CENTER" layoutX="76.0" layoutY="143.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="50.0" text="Exit" />
                  <Button fx:id="loginBtn_login" alignment="BOTTOM_LEFT" contentDisplay="CENTER" layoutX="226.0" layoutY="143.0" onAction="#login" prefHeight="25.0" prefWidth="50.0" text="Login" />
                  <Line endX="160.0" layoutX="173.0" layoutY="183.0" startX="-150.0" stroke="#a7a6a6" />
                  <Button fx:id="loginBtn_signin" layoutX="218.0" layoutY="196.0" mnemonicParsing="false" onAction="#signIn" text="Sign in" />
                  <Label fx:id="message" alignment="CENTER" layoutX="7.0" layoutY="10.0" prefHeight="42.0" prefWidth="348.0" textFill="RED" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</VBox>
